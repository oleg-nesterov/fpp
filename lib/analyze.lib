__plot_bpf = FPP(HOW,LAG, push,time,val) {
FILE:	#include <queue>
	struct $tv { unsigned time; float val; };
	static int $ID;

decl:	std::queue<$tv> $q;
	int	$t0, $t1 = 0;
	float	$v0, $v1 = 0;
	int	$id = ++$ID;

exec:	if ($push) $q.push({$time, float($val)});

	float ret = $v1;
	int time = $(u.iota) - $LAG;
	if (time < 0) goto $ret;

	while (time >= $t1) {
		static int warned;
		if ($q.empty()) {
			if (!warned++)
				LOG("WARN! bpf[%d]: empty %d [%d %d]",
				    $id, time, $t0,$t1);
			goto $ret;
		}
		$t0 = $t1; $v0 = $v1;
		auto n = $q.front(); $q.pop();
		$t1 = n.time; $v1 = n.val;
		warned = 0;
	}

	switch ($HOW) {
	case 0:
		ret = time == $t0 ? $v0 : 0;
		break;
	case 1:
		ret = $v0 + float(time - $t0) / float($t1 - $t0) * ($v1 - $v0);
		break;
	default:
		assert(0);
	}

	$ret: ret;
};

plot_bpf = __plot_bpf(1);
